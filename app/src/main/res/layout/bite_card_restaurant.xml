<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="72dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:layout_collapseMode="parallax"
    android:backgroundTint="?cardViewBackground"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/lift_on_touch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bite_card_header_margin_left"
            android:layout_marginEnd="@dimen/bite_card_header_margin_right"
            android:layout_marginTop="@dimen/bite_card_header_margin_top"
            android:layout_marginBottom="@dimen/bite_card_header_margin_bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/bite_card_header_image_weight">

                <ImageView
                    android:layout_width="@dimen/bite_card_header_image_size"
                    android:layout_height="@dimen/bite_card_header_image_size"
                    android:src="@drawable/ic_menu_person"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/person_description" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/bite_card_header_layout_weight"
                android:layout_margin="@dimen/bite_card_header_layout_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/bite_card_title_margin"
                    android:text="GESTART DOOR ANON"
                    android:textColor="?colorBiteCardTitleText"
                    android:textSize="@dimen/font_size_bite_card_title"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="italic|bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/bite_card_title_margin"
                    android:text="Bestelling sluit om 13:37"
                    android:textSize="@dimen/font_size_bite_card_location"
                    android:textColor="?colorBiteCardLocationText"
                    android:textStyle="normal"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Stripe -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bite_card_stripe_height"
            android:background="?colorBiteCardStripe"/>

        <!-- Social -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bite_card_social_margin_left"
            android:layout_marginEnd="@dimen/bite_card_social_margin_right"
            android:layout_marginTop="@dimen/bite_card_social_margin_top"
            android:layout_marginBottom="@dimen/bite_card_social_margin_bottom"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:text="ðŸ’¦"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:text="ðŸ’¦"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="32sp"
                android:text="ðŸ’¦"/>

        </LinearLayout>

        <!-- Stripe -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bite_card_stripe_height"
            android:background="?colorBiteCardStripe"/>

    <!-- Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bite_card_header_margin_left"
        android:layout_marginEnd="@dimen/bite_card_header_margin_right"
        android:layout_marginTop="@dimen/bite_card_header_margin_top"
        android:layout_marginBottom="@dimen/bite_card_header_margin_bottom"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="42sp"
            android:text="\?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="42sp"
            android:text="\?"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="42sp"
            android:text="\?"/>



    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
