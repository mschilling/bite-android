<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.move4mobile.apps.bite.LoginActivity">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="@integer/login_view_header"/>
    <com.move4mobile.apps.bite.customlayoutclasses.TextViewCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_login_welcome_title"
        android:text="@string/login_welcome_title"
        android:textColor="?colorAccent"
        android:gravity="bottom|center_horizontal"
        app:customFont="@string/compasse_extra_bold_italic"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="@integer/login_view_spacing"/>

    <com.move4mobile.apps.bite.customlayoutclasses.TextViewCustom
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_welcome_description_margin"
        android:layout_marginEnd="@dimen/login_welcome_description_margin"
        android:textSize="@dimen/font_size_login_welcome_description"
        android:text="@string/login_welcome_description"
        android:gravity="bottom|center_horizontal"
        app:customFont="@string/compasse"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="@integer/login_view_spacing"/>

    <RelativeLayout
        android:id="@+id/google_user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible">

        <com.move4mobile.apps.bite.customlayoutclasses.RelativeLayoutCircle
            android:id="@+id/circle_google_image"
            android:layout_width="@dimen/login_circle_size"
            android:layout_height="@dimen/login_circle_size"
            android:background="@drawable/circle"
            app:customCircleColor="?colorAccent"
            app:customStrokeWidth="@dimen/login_circle_stroke_width">

            <ImageView
                android:id="@+id/google_account_image"
                android:layout_width="@dimen/login_circle_image_size"
                android:layout_height="@dimen/login_circle_image_size"
                android:layout_marginTop="@dimen/login_circle_image_margin"
                android:layout_marginStart="@dimen/login_circle_image_margin"
                android:visibility="visible"/>

        </com.move4mobile.apps.bite.customlayoutclasses.RelativeLayoutCircle>
        <com.move4mobile.apps.bite.customlayoutclasses.TextViewCustom
            android:id="@+id/google_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_google_image"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            app:customFont="@string/compasse_extra_bold_italic"/>
    </RelativeLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="@integer/login_view_spacing"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonSize="wide"
        app:colorScheme="dark"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="@integer/login_view_spacing"/>

    <com.move4mobile.apps.bite.customlayoutclasses.TextViewCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_powered_by_margin"
        android:textSize="@dimen/font_size_powered_by"
        android:text="@string/powered_by"
        android:gravity="bottom|center_horizontal"
        app:customFont="@string/compasse"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/m4m_logo"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="@integer/login_view_spacing"/>
</LinearLayout>
