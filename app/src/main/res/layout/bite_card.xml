<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bite_card_margin"
    android:layout_marginStart="@dimen/bite_card_margin"
    android:layout_marginEnd="@dimen/bite_card_margin"
    android:backgroundTint="?cardViewBackground"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/lift_on_touch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu_person"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/person_description" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="1dp"
                    android:text="DOEMEDIEMAAR"
                    android:textColor="?colorBiteCardTitleText"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸŒ­"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸ”"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸŸ"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸ—"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸ’¦"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="@string/location_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/bite_card_location_text_margin_left"
                        android:gravity="center_vertical"
                        android:text="Gramsbergen"
                        android:textSize="14sp"
                        android:textColor="#9b9b9b"
                        android:textStyle="normal"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Stripe -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bite_card_stripe_height"
            android:layout_marginStart="48dp"
            android:background="?colorBiteCardStripe"/>

        <!-- Social -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:gravity="end">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_menu_person"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_menu_person"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_menu_person"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_menu_person"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_menu_person"
                android:contentDescription="@string/person_description" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
