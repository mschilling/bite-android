<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="@dimen/bite_card_margin"
    android:layout_marginEnd="@dimen/bite_card_margin"
    android:backgroundTint="?cardViewBackground"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/lift_on_touch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_shipit"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/person_description" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <com.move4mobile.apps.bite.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="1dp"
                    android:text="DOEMEDIEMAAR"
                    android:textColor="?colorBiteCardTitleText"
                    android:textSize="16sp"
                    app:customFont="@string/compasse_extra_bold_italic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.move4mobile.apps.bite.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸŒ­"
                        app:customFont="@string/compasse"/>
                    <com.move4mobile.apps.bite.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸŒ­"
                        app:customFont="@string/compasse"/>
                    <com.move4mobile.apps.bite.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸŒ­"
                        app:customFont="@string/compasse"/>
                    <com.move4mobile.apps.bite.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/bite_card_emoji_margin_left"
                        android:layout_marginEnd="@dimen/bite_card_emoji_margin_right"
                        android:textSize="@dimen/font_size_bite_card_emoji"
                        android:text="ðŸŒ­"
                        app:customFont="@string/compasse"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="@string/location_description" />

                    <com.move4mobile.apps.bite.TextViewCustom
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/bite_card_location_text_margin_left"
                        android:gravity="center_vertical"
                        android:text="Gramsbergen"
                        android:textSize="14sp"
                        android:textColor="#9b9b9b"
                        app:customFont="@string/compasse"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Stripe -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bite_card_stripe_height"
            android:layout_marginStart="48dp"
            android:background="?colorBiteCardStripe"/>

        <!-- Social -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="34dp"
            android:gravity="start">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_shipit"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_shipit"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_shipit"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_shipit"
                android:contentDescription="@string/person_description" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_shipit"
                android:contentDescription="@string/person_description" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
